---
const {
  slug,
  data: { title, image },
} = Astro.props;
---

<a href={slug} class="transition hover:scale-105">
  <div
    class={`px-12 py-6 flex flex-col items-center bg-gradient-to-t rounded-[30px] from-brand/40 to-brand/0`}
  >
    <img class="w-[100px] mb-10" src={image} alt="Category" />
    <h3 class="text-[18px] font-semibold">
      {title}
    </h3>
  </div>
</a>
